<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.order">

	<resultMap id="orderResult" type="orderVO">
		<result property="o_id" column="o_id" />
		<result property="u_name" column="u_name" />
		<result property="g_name" column="g_name" />
		<result property="ig_id" column="ig_id" />
		<result property="o_goods_qty" column="o_goods_qty" />
		<result property="o_goods_price" column="o_goods_price" />
		<result property="receiver_name" column="receiver_name" />
		<result property="receiver_hp" column="receiver_hp" />
		<result property="receiver_addr1" column="receiver_addr1" />
		<result property="receiver_addr2" column="receiver_addr2" />
		<result property="receiver_addr3" column="receiver_addr3" />
		<result property="deliver_method" column="deliver_method" />
		<result property="deliver_message" column="deliver_message" />
		<result property="delivery_state" column="delivery_state" />
		<result property="pay_method" column="pay_method" />
		<result property="card_com_name" column="card_com_name" />
		<result property="card_pay_month" column="card_pay_month" />
		<result property="good_cancel" column="good_cancel" />
		<result property="pay_order_time" column="pay_order_time" />
		<result property="g_id" column="g_id" />
		<result property="u_id" column="u_id" />
		<result property="s_id" column="s_id" />
		<result property="o_useMile" column="o_useMile" />
		<result property="b_gr_id" column="b_gr_id" />
	</resultMap>


	<insert id="insertOrder" parameterType="orderVO">
	    <![CDATA[
		            insert into order_tb (u_id,
		            g_id,
		            o_goods_price,
		            u_name, 
		            g_name,
		            receiver_hp,
		            receiver_addr1,
		            receiver_addr2,
		            receiver_addr3,
		            receiver_name,
		            pay_method,
		            card_pay_month,
		            deliver_method,
		            deliver_message,
		            o_useMile) values
		            (#{u_id},
		            #{g_id},
		            #{o_goods_price},
		            #{u_name},
		            #{g_name},
		            #{receiver_hp},
		            #{receiver_addr1},
		            #{receiver_addr2},
		            #{receiver_addr3},
		            #{receiver_name},
		            #{pay_method},
		            #{card_pay_month},
		            #{deliver_method},
		            #{deliver_message},
		            #{o_useMile})          
		]]>
	</insert>
	
	<select id="selectUserOrders" parameterType="String" resultMap="orderResult">
	<![CDATA[
		   select * from order_tb where u_id=#{u_id} order by pay_order_time desc
		]]>
	</select>
	
	<select id="UserboardOrderPage"  parameterType="String" resultMap="orderResult">
   <![CDATA[
	    select R1.* from (select * from order_tb) R1 where u_id = #{u_id} order by pay_order_time desc limit #{start} , #{end} 
	   ]]>
	</select>
	
	<select id="selectOrderList"  parameterType="String" resultMap="orderResult">
   <![CDATA[
	   select o.*, gr.b_gr_id from order_tb o left outer join board_gr gr on o.o_id = gr.o_id where o.delivery_state = #{delivery_state} and o.u_id = #{u_id};
	   ]]>
	</select>
	
	<select id="findU_id"  parameterType="Integer" resultType="String">
   <![CDATA[
	    select u_id from order_tb where o_id = #{o_id}
	   ]]>
	</select>
	<delete id="deleteOrder" parameterType="Integer">
	<![CDATA[
	delete from order_tb where o_id=#{o_id}
	]]>
	</delete>
	
	<select id="overlappedO_id"  parameterType="Integer" resultType="String">
   <![CDATA[
	   select if(count(*), 'true', 'false')
	   from board_gr where o_id = #{o_id}
	   ]]>
	</select>
	
	
	
	
	
</mapper>
